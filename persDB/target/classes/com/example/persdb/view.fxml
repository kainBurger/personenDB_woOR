<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.persdb.Controller">
    <GridPane>
        <Label text="ID" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="tfID" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Wohnort" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="tfWohnort" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    <Button text="ok" fx:id="btOk" onAction="#btOkClicked"/>
</VBox>
